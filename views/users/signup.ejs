<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
    <!-- Heading -->
    <h1 class="col-6 offset-3 text-center mb-4">Signup on WanderLust</h1>

    <div class="col-12 col-md-6 offset-md-3">
        <!-- Flash Messages (if any) -->
        <% if (messages.error) { %>
            <div class="alert alert-danger text-center">
                <%= messages.error %>
            </div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success text-center">
                <%= messages.success %>
            </div>
        <% } %>

        <!-- Signup Form -->
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            
            <!-- Username Input -->
            <div class="mb-3">
                <label for="username" class="form-label"><b>Username</b></label>
                <input 
                    name="username" 
                    id="username" 
                    type="text"  
                    class="form-control" 
                    required 
                    placeholder="Enter your username"
                />  
                <div class="invalid-feedback">Please enter a username.</div>
                <div class="valid-feedback">Looks good!</div>   
            </div>

            <!-- Email Input -->
            <div class="mb-3">
                <label for="email" class="form-label"><b>Email</b></label>
                <input 
                    name="email" 
                    id="email" 
                    type="email"  
                    class="form-control" 
                    required 
                    placeholder="Enter your email"
                />
                <div class="invalid-feedback">Please enter a valid email.</div>
                <div class="valid-feedback">Looks good!</div>   
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label for="password" class="form-label"><b>Password</b></label>
                <input 
                    name="password" 
                    id="password" 
                    type="password"  
                    class="form-control" 
                    required 
                    placeholder="Enter your password"
                />
                <div class="invalid-feedback">Please enter a password.</div>
                <div class="valid-feedback">Password looks strong!</div>   
            </div>

            <!-- Submit Button -->
            <button class="btn btn-primary w-100 py-2 mt-3">Signup</button>
        </form>

        <!-- Link to Login Page -->
        <div class="text-center mt-3">
            <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
    </div>
</div>

<!-- Add Custom CSS for Styling -->
<style>
    .alert {
        margin-bottom: 15px;
        font-size: 1.1rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1.1rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .w-100 {
        width: 100%;
    }

    .mt-3 {
        margin-top: 15px;
    }

    .mb-3 {
        margin-bottom: 20px;
    }

    .invalid-feedback {
        display: none;
        font-size: 0.875rem;
        color: #e74c3c;
    }

    .valid-feedback {
        display: none;
        font-size: 0.875rem;
        color: #2ecc71;
    }

    .form-control.is-invalid + .invalid-feedback {
        display: block;
    }

    .form-control.is-valid + .valid-feedback {
        display: block;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .col-12 {
            margin-bottom: 20px;
        }
    }
</style>

<!-- Optional: Add JavaScript for form validation -->
<script>
    // Bootstrap form validation
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
