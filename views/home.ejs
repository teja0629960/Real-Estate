<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Wanderlust</title>

  <!-- Bootstrap CSS (via CDN) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJX3mHjT8s+K6IP4bJ6vA5XZme2xkQ+maX6dFgRqa53Fx5ak5hfL4Xw3N7/j" crossorigin="anonymous">

  <!-- Font Awesome (for icons) -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <style>
    /* Custom Navbar Styling */
    .navbar {
      font-family: 'Arial', sans-serif;
      background-color: #2c3e50;
      border-bottom: 2px solid #34495e;
      padding: 15px 0;
    }

    .navbar-brand {
      font-weight: bold;
      color: #ecf0f1;
      font-size: 1.8rem;
      letter-spacing: 2px;
    }

    .navbar-brand:hover {
      color: #e74c3c;
    }

    .navbar-nav .nav-link {
      color: #ecf0f1;
      transition: all 0.3s ease;
      font-size: 1.1rem;
      padding: 10px 20px;
    }

    .navbar-nav .nav-link:hover {
      color: #e74c3c;
      text-decoration: none;
      transform: scale(1.1);
    }

    .navbar-nav .nav-link.active {
      color: #e74c3c;
      font-weight: bold;
    }

    .navbar-toggler-icon {
      background-color: #e74c3c;
    }

    /* Carousel Styling */
    .carousel-item img {
      object-fit: cover;
      height: 200px; /* Reduced height for small images */
    }

    /* Section Titles Styling */
    .section-title {
      text-align: center;
      margin: 50px 0;
      font-size: 2.5rem;
      font-weight: bold;
      color: #2c3e50;
    }

    /* Card and Button Styling */
    .card {
      border: none;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-dark {
      background-color: #e74c3c;
      color: white;
      transition: background-color 0.3s ease;
    }

    .btn-dark:hover {
      background-color: #c0392b;
    }

    /* Featured Deals Card Styling */
    .card-deck .card {
      margin-bottom: 30px;
    }

    /* Footer Styling */
    footer {
      background-color: #333;
      color: #fff;
      padding: 40px 0;
      text-align: center;
    }

    .container {
      width: 90%;
      max-width: 1200px;
      margin: 0 auto;
    }

    .f-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    /* Social Media Icons */
    .f-info-socials {
      display: flex;
      gap: 20px;
    }

    .social-icon {
      font-size: 2rem;
      color: #fff;
      transition: color 0.3s ease;
    }

    .social-icon:hover {
      color: #ffd700;
    }

    /* Footer Links */
    .footer-link {
      color: #ddd;
      font-size: 1rem;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .footer-link:hover {
      color: #ffd700;
    }

    /* Mobile View Adjustments */
    @media (max-width: 768px) {
      .navbar-nav {
        text-align: center;
      }

      .navbar-brand {
        font-size: 1.5rem;
      }

      .card-body {
        padding: 20px;
      }

      .card-title {
        font-size: 1.2rem;
      }

      .f-info-links {
        flex-direction: column;
        gap: 10px;
      }

      .f-info-socials {
        gap: 15px;
      }

      .social-icon {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>

  <!-- Main Content for Home Page -->
  <div class="container mt-5">
    <h1 class="section-title">Welcome to Wanderlust!</h1>
    <p class="text-center">Discover the best travel destinations, book your dream vacation, and explore unique experiences.</p>

    <!-- Featured Destinations Carousel -->
    <div id="destinationCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="https://th.bing.com/th/id/R.3a71dd593e4a991d6be2bc0e325a4265?rik=Ollt7vR%2bwqNmBg&riu=http%3a%2f%2foimfashion.com%2fwp-content%2fuploads%2f2018%2f02%2fexterior-shot-min.jpg&ehk=FhhDAs5oQsipZLD1M3oGvxBNK%2fKLYgWpOQOqkvu9duQ%3d&risl=&pid=ImgRaw&r=0" class="d-block w-100" alt="Destination 1" style="height: 200px; object-fit: cover;">
        </div>
        <div class="carousel-item">
          <img src="https://c4.wallpaperflare.com/wallpaper/624/380/1000/life-resort-hotel-resort-hotel-wallpaper-preview.jpg" class="d-block w-100" alt="Destination 2" style="height: 200px; object-fit: cover;">
        </div>
       
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#destinationCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#destinationCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!-- Featured Sections: Explore and Create Listings -->
    <div class="row mt-5">
      <div class="col-12 col-md-6 mb-4">
        <div class="card">
          <img src="https://th.bing.com/th/id/OIP.9XXM9XGx9DmGIL6Ku2s7HgHaEK?rs=1&pid=ImgDetMain" alt="Explore New Places" style="height: 200px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title">Explore New Places</h5>
            <p class="card-text">Find your next vacation spot, with our curated listings of amazing destinations.</p>
            <a href="/listings" class="btn btn-dark">Explore Listings</a>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-6 mb-4">
        <div class="card">
          <img src="https://th.bing.com/th/id/OIP.8V5SzCx6QVRFXq6QV_xmpAHaEo?rs=1&pid=ImgDetMain" class="card-img-top" alt="Create a Listing" style="height: 200px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title">Create a Listing</h5>
            <p class="card-text">Want to share your vacation rental? Add your listing to help travelers discover it!</p>
            <a href="/listings/new" class="btn btn-dark">Add a Listing</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Featured Deals Section -->
    <div class="row mt-5">
      <div class="col-12">
        <h2 class="section-title">Exclusive Deals</h2>
        <p class="text-center">Check out some of the best deals on hotel bookings this season.</p>
        <div class="card-deck">
          <div class="card">
            <img src="https://cdn.pixabay.com/photo/2021/12/11/07/59/hotel-6862163_960_720.jpg" alt="Deal 1" style="height: 200px; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title">Summer Special</h5>
              <p class="card-text">Book now for summer vacation and save up to 30% on select properties!</p>
              <a href="/listings" class="btn btn-dark">Book Now</a>
            </div>
          </div>
          <div class="card">
            <img src="https://ticketspy.nl/wp-content/uploads/2018/12/Rood.jpg" class="card-img-top" alt="Deal 2" style="height: 200px; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title">Winter Getaway</h5>
              <p class="card-text">Escape the cold and enjoy 25% off winter destinations. Limited time offer!</p>
              <a href="/listings" class="btn btn-dark">Book Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS (for carousel and navbar toggling) -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
